# Stycly Configuration - Copy this to .env and fill in your values

# Flask secret key - generate with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-here

# Database URI - SQLite for local dev, PostgreSQL for production
# Local: sqlite:///stycly.db
# Production: postgresql://username:password@host:port/database
DATABASE_URI=sqlite:///stycly.db

# Email configuration (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Internal email for orders
ORDERS_EMAIL=orders@stycly.com

# Flask environment
FLASK_ENV=development
FLASK_DEBUG=True
